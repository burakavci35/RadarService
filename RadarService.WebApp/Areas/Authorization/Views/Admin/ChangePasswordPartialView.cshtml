@model RadarService.Authorization.Dtos.ChangePasswordDto
<h1>Create</h1>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="ChangePasswordPartialView" data-ajax="true" data-ajax-mode="replace" data-ajax-success="CreateOnSuccess" data-ajax-update="#modalBody">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="EmployeeNumber" />
            <div class="form-group">
                <label asp-for="EmployeeNumber" class="control-label"></label>
                <input asp-for="EmployeeNumber" class="form-control" disabled/>
                <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label fw-bolder text-dark fs-6"></label>
                <input asp-for="Password" class="form-control form-control-lg form-control-solid" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label fw-bolder text-dark fs-6"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg form-control-solid" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="ChangePassword" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



